{
  "expo": {
    "name": "wreader",
    "slug": "wreader",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "assetBundlePatterns": [
      "assets/fonts/*",
      "assets/images/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.wreader.wreader-resource",
      "buildNumber": "1.1.0",
      "googleServicesFile": "./GoogleService-Info.plist",
      "splash": {
        "image": "./assets/images/splash@2x.png",
        "tabletImage": "./assets//images/splash@3x.png",
        "resizeMode": "cover",
        "backgroundColor": "#6d665a"
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Wreader requires accessing your photo library to pick one and use it as a background image of a chapter card",
        "CFBundleAllowMixedLocalizations": false,
        "CFBundleIdentifier": "com.wreader.wreader-resource",
        "useNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.wreader.wreader_resource",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "splash": {
        "hdpi": "./assets/images/splash.png",
        "mdpi": "./assets/images/splash.png",
        "xhdpi": "./assets/images/splash@2x.png",
        "xxhdpi": "./assets/images/splash@3x.png",
        "xxxhdpi": "./assets/images/splash@3x.png",
        "resizeMode": "cover",
        "backgroundColor": "#6d665a"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "flipperHack": "React Native Packager is running"
    }
  }
}
